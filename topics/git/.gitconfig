[alias]
  su = stash -u
  sp = stash pop
  spf = git stash show -p | git apply && git stash drop

[apply]
  whitespace = fix

[color]
  ui = auto

[core]
  excludesfile = ~/.gitignore
  quotepath = false
  editor = vim
  whitespace = trailing-space
  trustctime = false
  precomposeunicode = false
  untrackedcache = true

[diff]
  mnemonicprefix = true

[difftool]
  prompt = false

[help]
  autocorrect = 1

[include]
  path = ~/.gitconfig.local

[init]
  templatedir = ~/.git-templates

[merge]
  log = true

[mergetool]
  prompt = false
  keepbackup = false

[push]
  default = simple
  followtags = true

[rerere]
  enabled = 1

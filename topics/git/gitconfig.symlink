[include]
  path = ~/.gitconfig.local

[color]
  ui = auto

[core]
  excludesfile = ~/.gitignore
  quotepath = false
  editor = vim

[alias]
  su = stash -u
  sp = stash pop
  spf = git stash show -p | git apply && git stash drop

[apply]
  whitespace = nowarn

[mergetool]
  prompt = false
  keepBackup = false

[difftool]
  prompt = false

[help]
  autocorrect = 1

[push]
  default = simple
